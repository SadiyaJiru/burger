<div class="container">
  <section id="Burger">
<h1>Burgers To Eat</h1>
<!--Add an Image -->

  </section>

    <section class="row">
        <div class="col-md-7 col-left">
            <table>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-par}}
                    {{/unless}}
                {{/each}}
            </table>
        </div>
        <div class="col-md-5 col-right">
            {{#each burgers}}
                {{#if devoured}}
                    <div>{{id}}. {{burger_name}}</div>
                {{/if}}
            {{/each}}        
        </div>          
    </section>

    <form class="create-form">
        <div class="form-group">
            <label for="name"></label>
            <textarea id="name" name="burger-name" rows="2" cols="40" placeholder="What Burger Are You Thinking Of?"></textarea>
        </div>
        <button type="submit">Add This Burger</button>
    </form>     
</div>
</div> <!--End of Conatiner-->

