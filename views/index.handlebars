<h1>Eat some burgers</h1>
<br>
<div id='container'>

<div id='burgersNotEaten'>
   
    <ul>
        <!--Loop through each burger array, unless it's devoured and display it at the top.-->
        
        {{#each burgers}} {{#unless this.devoured}}
        <li>
            <!--Burger name in DB-->
            {{this.id}}. {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button class="btn btn-warning" type="submit">Devour!</button>
            </form>

        </li>
        {{/unless}} {{/each}}
    </ul>
</div>

<!--Displays devoured burgers-->
<div id='devoured'>
    <h3>Burgers You've Eaten: </h3>
    <ul>
        <!--Loop through the array of burgers and display them if they've been devoured-->
        <!--Devoured value is = 1/false -->
        {{#each burgers}} {{#if this.devoured}}
        <li>
            {{this.id}}. {{this.burger_name}}
        </li>
        {{/if}} {{/each}}
    </ul>
</div>

<!--Form to add new burger -->
<div id='add'>
    <h2>Create a Burger: </h2>

    <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
            <label for="name">Burger Name:</label>
            <input type="text" id="dab" name="burger_name">
        </div>
        <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>
</div>
</div>