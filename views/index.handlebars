<h1>Eat Your Burger!</h1>

<div class="alignment">
<h2>Burgers available to eat!</h2>
<div class="left-uneaten">

<ul>
   
 <!--loop through burgers array on each burger-->
  {{#each burgers}}
  <!--unless it is eaten-->
    {{#unless devour}}
    <!--Include the burgers-block template & refer to the helper function-->
      {{> burgers/burgers-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="right-eaten">
<h2>Need to be made again if you want to eat!</h2>
<ul>
  {{#each burgers}}

    {{#if devour}}
      {{> burgers/burgers-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="hungry">Hungry?</label><br>
    <input type="radio" name="devour" value="1" checked> Hungry!<br>
    <input type="radio" name="devour" value="0"> Not Hungry
  </div>

  <button type="submit">Add Burger</button>
</form>
